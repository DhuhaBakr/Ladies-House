<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/serviceNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="17dp"
        android:textSize="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/servicePriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/serviceNameTextView"
        android:layout_alignBottom="@+id/serviceNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/serviceDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/serviceNameTextView"
        android:layout_alignRight="@+id/serviceNameTextView"
        android:layout_below="@+id/serviceNameTextView"
        android:layout_marginTop="13dp"
        android:text="TextView"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/hiddenFreelancerID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/servicePriceTextView"
        android:layout_alignStart="@+id/servicePriceTextView"
        android:layout_below="@+id/serviceDescriptionTextView"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:text="TextView" />
    <TextView
        android:id="@+id/hiddenServiceID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/servicePriceTextView"
        android:layout_alignStart="@+id/servicePriceTextView"
        android:layout_below="@+id/serviceDescriptionTextView"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:text="TextView" />


</RelativeLayout>
