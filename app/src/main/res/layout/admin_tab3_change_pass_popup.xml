<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup"
    android:backgroundTint="@color/colorAccent"
    android:padding="40dp">

    <TextView
        android:id="@+id/new_pass_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/new_pass_2_EditText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorAccent"
        android:text="كلمة المرور الجديدة :"
        android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/new_pass_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/change_pass_button"
        android:layout_toEndOf="@+id/new_pass_2_EditText"
        android:layout_toRightOf="@+id/new_pass_2_EditText"
        android:background="@color/colorAccent"
        android:text="تأكيد كلمة المرور :"
        android:textColorLink="@android:color/black"
        android:textSize="15dp" />


    <EditText
        android:id="@+id/new_pass_1_EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/new_pass_1"
        android:layout_toStartOf="@+id/new_pass_1"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorLink="@android:color/black" />

    <EditText
        android:id="@+id/new_pass_2_EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/new_pass_1_EditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/new_pass_1_EditText"
        android:layout_below="@+id/new_pass_1_EditText"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorLink="@android:color/black" />

    <Button
        android:id="@+id/change_pass_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/new_pass_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/new_pass_2"
        android:layout_below="@+id/new_pass_2_EditText"
        android:layout_marginTop="59dp"
        android:background="@android:color/background_light"
        android:text=" تغيير كلمة المرور"
        android:textColorLink="@android:color/black" />

</RelativeLayout>